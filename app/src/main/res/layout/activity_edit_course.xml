<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/course_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="课程名称"
        android:inputType="textPersonName"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/teacher_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="授课教师"
        android:inputType="textPersonName"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/start_time_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="开始时间 (HH:mm)"
        android:inputType="time"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/end_time_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="结束时间 (HH:mm)"
        android:inputType="time"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/location_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="上课地点"
        android:inputType="textPostalAddress"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_marginBottom="10dp"/>

    <Spinner
        android:id="@+id/weekday_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/weekdays"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/modify_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改课程"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="删除课程"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
</LinearLayout>